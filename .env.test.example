# Test Environment Variables
# Copy this to .env.test for local testing

# Django Settings
DJANGO_SETTINGS_MODULE=config.settings.test
DEBUG=True
SECRET_KEY=test-secret-key-not-for-production

# Database (SQLite in-memory for tests)
# DATABASE_URL=sqlite:///:memory:

# For PostgreSQL tests (optional)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/test_db

# Redis (optional, uses in-memory channel layer by default in tests)
# REDIS_URL=redis://localhost:6379/0

# Celery (runs eagerly in tests)
CELERY_TASK_ALWAYS_EAGER=True
CELERY_TASK_EAGER_PROPAGATES=True

# Email (uses in-memory backend in tests)
EMAIL_BACKEND=django.core.mail.backends.locmem.EmailBackend

# Cache (uses in-memory cache in tests)
CACHE_BACKEND=locmem

# Disable external services
DISABLE_SENTRY=True
DISABLE_ANALYTICS=True

# Test-specific settings
TESTING=True
